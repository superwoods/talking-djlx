
rot3ItemBoxHeight = 459px

.rot3BoxBox
    // padding: 36px 0
    margin-bottom: 20px

.rot3Box
    position: relative
    width: (1200px + 60px * 2)
    height rot3ItemBoxHeight
    margin: 0 auto
    
    .rot3
        width: 1200px
        height 460px
        margin: 0 auto
        // border: 1px #ffffff solid

    .rot3-prev
    .rot3-next
        color: var(--moo-color)
        outline: none 

    .rot3-prev
        // 
    .rot3-next
        margin-right: 0

    .rot3-pagination
        left: 50%
        transform: translateX(-50%)
        // width: 50%
        // border: 1px solid #ffffff

        .swiper-pagination-bullet
            outline: none
            width: 60px
            height 4px
            border-radius: (@height / 2)
            background-color: #e4e4e4
            opacity 1 

        .swiper-pagination-bullet-active
            background-color: var(--moo-color)

        .swiper-pagination-bullet+.swiper-pagination-bullet
            margin-left: 6px


    .itemBox
        display: flex
        flex-direction: column
        align-items: center
        justify-content: space-between
        position relative
        height rot3ItemBoxHeight
        overflow hidden
        background-color: var(--moo-itemBoxBg)

        .pic
            pic()
            position relative
            flex: 0 1 auto

            &
            & a
                width 100%
                height 218px

            img
                img()
                height auto
                width: 100%

        .title
            flex: 1 0
            title()
            width auto
            background: none
            position: static
            margin: 0 20px
            display: flex
            flex-direction: column
            align-items: center
            justify-content: center
            position relative

            &
            & a 
                color #333333
            
            a:hover
                color: var(--moo-color) !important

            .text
                text()
                font-size: 26px
                line-height: 34px
                margin-bottom: 16px
                font-weight: 400
                max-height (@line-height * 2)
                overflow hidden
                text-align: left 

            .abs
                width 90%
                line-height: 26px
                font-size: 16px
                font-weight: 400
                height (@line-height * 4)
                min-height: @height
                overflow hidden
                color: #999999

