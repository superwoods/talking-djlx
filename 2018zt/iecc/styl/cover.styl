.cover
    display: block
    width: 100%
    height 100%
    position: fixed
    background: #e3f0f6;
    background: radial-gradient(ellipse at center,  #e3f0f6 0%, #76a7e0 100%);
    background: url(cover.png)
    background-position: center center
    background-repeat: no-repeat
    background-size: cover 
    cursor pointer
    z-index 99

    &:after
        content: '进入专题'
        position: absolute
        display: inline-block
        overflow hidden
        width 120px
        height 40px
        line-height: @height
        border: #3074ff 2px solid 
        text-align: center
        font-size: 20px
        padding: 0 20px
        top: auto
        left 50%
        bottom: 30%
        transform: translate(-50%, -50%)
        border-radius: 6px
        color: #3074ff

.is-mobile
    .cover
        display: none