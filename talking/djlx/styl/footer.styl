.footer
    background-color: var(--moo-footerBg)
    text-align: center
    padding: 40px 0 30px
    font-size: 14px
    line-height: 18px
    font-weight: 400
    color: #ffffff
    z-index 4
    position relative
    margin-top: 40px
    
    a
        color: #ffffff !important

    .footer-in1
        text-align: center
        display: flex
        flex-direction: row
        justify-content: space-between
        width 1200px
        margin: 0 auto
    
    .textBox1
        display: flex
        flex-direction: row
        justify-content: space-around
        align-items: center
        width: 700px

    .text1
    .text2
    .text3
        padding-top: 6px
        line-height: 24px

    .text1
        background-image: url(icon-phone.png)
        background-repeat: no-repeat
        background-position: left bottom
        padding-left: 30px
        
    .text3
        background-image: url(icon-home.png)
        background-repeat: no-repeat
        background-position: left bottom
        padding-left: 36px

    .textBox2
        display: flex
        flex-direction: row
        justify-content: space-between
        width: 210px
        margin: 0 auto 6px
    
    .footer-in2
        width: 100%
        margin: 0 auto
        border-top: 1px #0068b7 solid
        padding-top: 16px
        margin-top: 16px



.is-mobile
    .footer
        width: 100%
        padding: 16px 0 30px

        &-in
            width: 90% 