.is-mobile
    // isMobBannerBgHeight = 120%
    // moblieBannerHeight = 400px
    .banner
        display: block
        position relative
        width: 100%
        height 500px
        overflow hidden

    .banner-bg
        background-size: auto 100%
        background-position: center 0
        // background-image: url(banner.png)
        position relative
        background-size: auto 500px
        
        &:after
            content: '<< 返回首页'
            position: absolute
            z-index 1
            width: 100px
            // color var(--moo-color)
            color #ffffff
            font-size: 18px
            left: 50%
            transform: translateX(-50%)
            bottom: 10px
            font-weight: 400
            pointer-events: none
            text-align: center

    .bannerTitle
        display: none
        z-index 2
        position: absolute
        transform: translate(-50%, -50%)
        left: 50%
        top: 50%
        width: 98%
        height auto

    .bannerTitle-md
        // display: none
        display: block
        z-index 2
        position: absolute
        transform: translate(-48%, -50%)
        left: 50%
        top: 50%
        width: 96%
        height auto
        
